{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2018",
    "esModuleInterop": true,
    "sourceMap": true,

    "alwaysStrict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": false,
    "strictNullChecks": true,

    "baseUrl": ".",
    "paths": {
      "~interfaces/*": ["interfaces/*"]
    },

    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  }
}
